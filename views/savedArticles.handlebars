<header class="header">
  <h1 id="nbaTitle"> The New York Times: NBA </h1>
  <h2 id="webScraperTitle">[ WEB-SCRAPER ]</h2>
  <nav class="button-group">
    <a href="/"><button class="button-dark">Home</button></a>
  </nav>
</header>
  <div class="filler"></div>

  {{#each articles}}
    {{#if saved}}
      <figure class="storyPanel clearfix">
        <a href="{{link}}" class="pull-right" target="_blank">
          <div class="imgBox">
            <img src="{{imgUrl}}" alt="" class="storyImg" height="150">
          </div>
        </a>
        {{#if link}}
          <a href="{{link}}" class="storyLink" target="_blank">
            <h2 class="storyHeadline">{{headline}}</h2>
          </a>
        {{else}}
          <h3 class="storyHeadline">{{headline}}</h3>
        {{/if}}
        <h5 class="storyByline">{{author}}</h5>
        <h6 class="storySummary">{{summary}}</h6>
        <button class="addNote storyButton" data-id="{{_id}}">Add Note</button>
        <button class="deleteArticle storyButton" data-id="{{_id}}">Delete Article</button>
      </figure>
    {{/if}}
  {{/each}}

    <div id="noteModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <input type="text" id="noteTitleEntry" class="noteInput" placeholder="Enter Title">
          <input type="text" id="noteBodyEntry" class="noteInput" placeholder="Enter Body">
          <div id="noteArea"></div>
        </div>
        <div class="modal-footer">
          <h6 class="instructions">Click the note to read it, or X to delete</h6>
          <button type="button" id="submitNote">Save Note</button>
        </div>
      </div>
    </div>
  </div>